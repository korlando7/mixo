{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src/",
    "typeRoots": ["node_modules/@types", "src/typings"]
  },
  "include": [
    "src/**/*",
    "src/tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}